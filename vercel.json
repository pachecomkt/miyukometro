{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "miyukometro.html",
      "use": "@vercel/static"
    },
    {
      "src": "imgs/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/imgs/(.*)",
      "dest": "/imgs/$1"
    },
    {
      "src": "/",
      "dest": "/miyukometro.html"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/miyukometro.html"
    }
  ]
}
